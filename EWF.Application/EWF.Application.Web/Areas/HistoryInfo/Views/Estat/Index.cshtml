		}

		function initYearChart(dataArray, year, subTitle) {
			var yData = [];
			var drilldownData = [];

			$.each(dataArray, function (n, row) {
				yData.push({ name: row.STNM, y: parseFloat( row.YearVal), drilldown: row.STNM });
