    <script type="text/javascript">
		function getSubTitle(datasrc) {
			if (datasrc === "history") return "数据来自历史库整编数据";
			if (datasrc === "real") return "数据来自实时库，由系统计算统计";
		}
		function getmax(vmax, vmin) {
			if (vmax == 0) {
				return 5;
			}
			var maxvalue = vmax;
			var minvalue = vmin;
			if (vmax <= vmin) {
				vmax = vmin + 1;
			}
			var dy = vmax - vmin;
			var dt = 1;
			while (dy <= 1) {
				dy = dy * 10;
				dt = dt * 0.1;
			}
			while (dy > 10) {
				dy = dy * 0.1;
				dt = dt * 10;
			}
			while (dy > 8) {
				dy = dy * 0.5;
				dt = dt * 2;
			}
			while (dy < 3) {
				dy = dy * 2;
				dt = dt * 0.5;
			}
			var temy = Math.round(vmax / dt); //取整
			if (temy >= vmax / dt) { maxvalue = temy * dt; }
			else { maxvalue = (temy + 1) * dt; }
			temy = Math.round(vmin / dt); //取整
			if (temy <= vmin / dt) {
				minvalue = temy * dt;
			}
			else {
				minvalue = (temy - 1) * dt;
			}
			return maxvalue;
		}
